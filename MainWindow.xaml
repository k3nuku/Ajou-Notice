                <Image Name="second_row_normal_tab" Grid.Row="2" Source="Images/0-84.png" Stretch="None" d:IsLocked="True"/>
                <Image Grid.Row="3" Source="Images/0-110.png" Stretch="None" d:IsLocked="True"/>
